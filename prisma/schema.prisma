generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  notes         Note[]
  projects      Project[]
  areas         Area[]
  resources     Resource[]
  dailyPrompts  DailyPrompt[]
  
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// Core Pattern Vault Models

enum NoteSource {
  JOURNAL
  CAPTURE
  MANUAL
  IMPORT
}

enum NoteTag {
  DECISION
  FRICTION
  WIN
  IDEA
  QUESTION
  OPEN_LOOP
  NOTE
  MOOD
}

model Note {
  id          String    @id @default(cuid())
  title       String
  content     String    @db.Text
  source      NoteSource @default(MANUAL)
  tags        NoteTag[]
  
  // PARA classification
  projectId   String?   @map("project_id")
  areaId      String?   @map("area_id")
  resourceId  String?   @map("resource_id")
  
  project     Project?  @relation(fields: [projectId], references: [id])
  area        Area?     @relation(fields: [areaId], references: [id])
  resource    Resource? @relation(fields: [resourceId], references: [id])
  
  // Connections
  connectionsAsSource Connection[] @relation("SourceNote")
  connectionsAsTarget Connection[] @relation("TargetNote")
  
  userId      String    @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  // Full-text search
  @@index([title])
  @@index([tags])
  @@index([createdAt])
  @@map("notes")
}

model Connection {
  id            String   @id @default(cuid())
  sourceNoteId  String   @map("source_note_id")
  targetNoteId  String   @map("target_note_id")
  strength      Int      @default(1) // 1-10, how strong the connection
  
  sourceNote    Note     @relation("SourceNote", fields: [sourceNoteId], references: [id], onDelete: Cascade)
  targetNote    Note     @relation("TargetNote", fields: [targetNoteId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now()) @map("created_at")
  
  @@unique([sourceNoteId, targetNoteId])
  @@map("connections")
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  status      String    @default("active") // active, paused, completed, archived
  targetDate  DateTime? @map("target_date")
  
  notes       Note[]
  
  userId      String    @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  @@map("projects")
}

model Area {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  
  notes       Note[]
  
  userId      String    @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  @@map("areas")
}

model Resource {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  
  notes       Note[]
  
  userId      String    @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  @@map("resources")
}

model DailyPrompt {
  id          String    @id @default(cuid())
  date        DateTime  @db.Date
  question    String
  response    String?   @db.Text
  completed   Boolean   @default(false)
  
  userId      String    @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  @@unique([userId, date])
  @@map("daily_prompts")
}
